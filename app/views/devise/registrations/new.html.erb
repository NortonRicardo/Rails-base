<body class="authentication-bg-im">
<div class="account-pages mt-5 mb-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-5">
        <div class="card">

          <div class="card-header pt-4 pb-4 text-center bg-primary">
            <a href="index.html">
              <span><img src="../assets/logo.png" alt="" height="18"></span>
            </a>
          </div>

              <div class="card-body p-4">
                <div class="text-center w-75 m-auto">
                  <h4 class="text-dark-50 text-center mt-0 font-weight-bold">Cadastrar-se</h4>
                  <p class="text-muted mb-4">Digite seu endereço de e-mail e senha para registrar-se no sistema.</p>
                </div>

                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <% if f.error_notification.present? %>
                      <div class="text-center w-75 m-auto">
                        <%= f.error_notification %>
                      </div>
                    <% end %>

                  <div class="form-group">
                    <%= f.input :user_name,
                                label:"Nome de Usuário",
                                required: false,
                                input_html: { class: 'form-control', placeholder:"Digite seu Nome de Ususário" } %>
                  </div>

                  <div class="form-group">
                    <%= f.input :email,
                                required: false,
                                input_html: { autocomplete: "email", class: 'form-control', placeholder:"Digite seu email" } %>
                  </div>

                  <div class="form-group">
                    <%= f.input :password,
                                label: "Senha",
                                required: false,
                                input_html: { autocomplete: "current-password", class: 'form-control', placeholder:"Digite sua Senha" } %>
                  </div>

                  <div class="form-group">
                    <%= f.input :password_confirmation,
                                label: "Confirmar Senha",
                                required: false,
                                input_html: { autocomplete: "current-password", class: 'form-control', placeholder:"confirme sua Senha" } %>
                  </div>

                  <div class="form-group mb-0 text-center">
                    <button class="btn btn-primary" type="submit">
                      Cadastra-se
                    </button>
                  </div>

                <% end %>
            </div>


        </div>

        <div class="row mt-5">
          <div class="col-12 text-center">
            <p class="text-light">Já tem conta?
              <%= link_to "Entrar", new_session_path(resource_name),
                                         class:"text-light ml-1" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<footer class="footer footer-alt text-light">
  2019 - 2020 © IADA - IADA.com
</footer>

</body>
